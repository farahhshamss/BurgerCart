<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prj.burgercart.UserPanel">

    <Button
        android:id="@+id/userordersbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="195dp"
        android:layout_marginBottom="31dp"
        android:text="@string/show_all_my_orders"
        app:layout_constraintBottom_toTopOf="@+id/addneworderbutton"
        app:layout_constraintStart_toStartOf="@+id/addneworderbutton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addneworderbutton"
        android:layout_width="172dp"
        android:layout_height="0dp"
        android:layout_marginBottom="417dp"
        android:text="Add New Order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userordersbutton" />

    <Button
        android:id="@+id/editprofilebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit My Profile"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="372dp" />
</androidx.constraintlayout.widget.ConstraintLayout>